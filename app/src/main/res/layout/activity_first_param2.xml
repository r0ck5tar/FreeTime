<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.unice.polytech.freetime.app.FirstParam2">

    <LinearLayout android:id="@+id/fullscreen_content_controls"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/editText_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="2"
            android:text="Enter your name"
            android:textColor="@android:color/darker_gray"
            android:gravity="center"
            android:textSize="20dp"
            android:onClick="onClick_text"
            android:ems="10"
            android:inputType="text" />

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_marginTop="15dp"
            android:layout_weight="2"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/import_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_download"
                    android:layout_margin="3dp"
                    android:onClick="onClick_import"
                    android:background="#ffa3cec6"/>

                <ImageButton
                    android:id="@+id/done_button1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abc_ic_cab_done_holo_dark"
                    android:layout_margin="3dp"
                    android:background="#ffa3cec6"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Import calendar"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#48a48d"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/freetime_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_time"
                    android:layout_margin="3dp"
                    android:onClick="onClick_freetime"
                    android:background="#ff87bdb5"/>



                <ImageButton
                    android:id="@+id/done_button2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abc_ic_cab_done_holo_dark"
                    android:layout_margin="3dp"
                    android:background="#ffa3cec6"
                    android:visibility="invisible"/>

            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Define your FreeTime"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#48a48d"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <ImageButton
                    android:id="@+id/dailyAct_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_action_event"
                    android:layout_weight="3"
                    android:layout_margin="3dp"
                    android:onClick="onClick_dailyAct"
                    android:background="#ff6da39b"/>

                <ImageButton
                    android:id="@+id/done_button3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abc_ic_cab_done_holo_dark"
                    android:layout_margin="3dp"
                    android:background="#ffa3cec6"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Define your dailies activities"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#48a48d"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <ImageButton
                    android:id="@+id/notif_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_dialog_info"
                    android:layout_weight="3"
                    android:layout_margin="3dp"
                    android:onClick="onClick_notif"
                    android:background="#48a48d"/>

                <ImageButton
                    android:id="@+id/done_button4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/abc_ic_cab_done_holo_dark"
                    android:layout_margin="3dp"
                    android:background="#ffa3cec6"
                    android:visibility="invisible"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Allow Smart notification"
                android:layout_weight="1"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textColor="#48a48d"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="2">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Previous"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:layout_margin="20dp"
                android:onClick="onClick_previous"
                android:background="#48a48d"
                android:visibility="invisible"/>

            <Button
                android:id="@+id/button_next"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Next"
                android:layout_gravity="bottom"
                android:layout_weight="2"
                android:layout_margin="20dp"
                android:onClick="onClick_next"
                android:background="#48a48d"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
