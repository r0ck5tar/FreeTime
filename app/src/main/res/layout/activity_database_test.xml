<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="fr.unice.polytech.freetime.app.DatabaseTestActivity">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/db.endDatePicker"
        android:calendarViewShown="false"
        android:layout_below="@+id/db.startTimePicker"
        android:layout_alignLeft="@+id/db.startDatePicker"
        android:layout_alignStart="@+id/db.startDatePicker" />


    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/db.endTimePicker"
        android:layout_below="@+id/db.endDatePicker"
        android:layout_alignLeft="@+id/db.startTimePicker"
        android:layout_alignStart="@+id/db.startTimePicker" />

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/db.startDatePicker"
        android:calendarViewShown="false"
        android:layout_alignTop="@+id/db.startDatePicker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/db.startTimePicker"
        android:measureAllChildren="false"
        android:layout_below="@+id/db.startDatePicker"
        android:layout_alignRight="@+id/db.startDatePicker"
        android:layout_alignEnd="@+id/db.startDatePicker" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:id="@+id/db.testButton"
        android:layout_alignBottom="@+id/db.startTimePicker"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onTestButtonClick" />

</RelativeLayout>
