<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.unice.polytech.freetime.app" >

    <application
        android:name=".FreeTimeApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImportCalendarActivity"
            android:label="@string/title_activity_import_calendar" >
        </activity>
        <activity
            android:name=".FreeTimeCalendarViewActivity"
            android:label="@string/title_activity_free_time_calendar_view" >
        </activity>
        <activity
            android:name=".DatabaseTestActivity"
            android:label="@string/title_activity_database_test" >
        </activity>
    </application>

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

</manifest>
